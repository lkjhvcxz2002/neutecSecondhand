# 郵件服務設定
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# 其他郵件服務選項：
# EMAIL_SERVICE=outlook
# EMAIL_SERVICE=yahoo
# EMAIL_SERVICE=proton
