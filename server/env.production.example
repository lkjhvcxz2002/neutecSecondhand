# ========================================
# 生產環境配置範例 (.env.production)
# ========================================

# 環境標識
NODE_ENV=production

# 伺服器配置
PORT=5000
HOST=0.0.0.0

# 郵件服務配置
EMAIL_SERVICE=gmail
EMAIL_USER=neutecsecondhand@gmail.com
EMAIL_PASS=leapzchaxqduyohw

# 前端網址（生產環境）
FRONTEND_URL=https://your-domain.com

# JWT 配置
JWT_SECRET=your-super-secure-production-secret-key-here
JWT_EXPIRES_IN=7d

# 資料庫配置
DB_PATH=/var/lib/secondhand/database/secondhand.db

# 檔案上傳配置
UPLOAD_PATH=/var/lib/secondhand/uploads
MAX_FILE_SIZE=5242880

# 日誌配置
LOG_LEVEL=info
LOG_FILE=/var/log/secondhand/app.log

# 生產環境配置
DEBUG=false
CORS_ORIGIN=https://your-domain.com

# 郵件發送限制（生產環境）
EMAIL_RATE_LIMIT=50
EMAIL_RATE_WINDOW=3600000

# 維護模式（生產環境預設關閉）
MAINTENANCE_MODE=false

# 安全配置
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 監控配置
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# SSL 配置（如果使用 HTTPS）
SSL_ENABLED=false
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem
